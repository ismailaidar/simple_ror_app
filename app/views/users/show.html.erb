<% provide(:title, @user.name) %>
<% flash.each do |k, v| %>
  <div class="alert alert-<%= k %>"><%= v %></div>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
       <h1>
         <%= gravatar_for @user %>
         <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>